<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="com.tritonkor.grouptester.desktop.presentation.controller.group.JoinGroupController"
  prefHeight="400.0" prefWidth="600.0">
  <center>
    <VBox alignment="CENTER" spacing="20.0"
      style="-fx-padding: 20;">
      <children>
        <Label text="Приєднатись до групи" fx:id="groupLabel" styleClass="mainLabel"/>
        <HBox spacing="20" alignment="CENTER">
          <children>
            <VBox spacing="10.0" alignment="CENTER">
              <children>
                <TextField fx:id="groupCodeField" promptText="Код" styleClass="textField"/>
              </children>
            </VBox>
          </children>
        </HBox>
      </children>
      <Button text="Створити" fx:id="joinGroupButton" styleClass="secondaryButton" onAction="#handleJoinGroup"/>
    </VBox>
  </center>
</BorderPane>
